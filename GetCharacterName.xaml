<Window x:Class="XMLCharSheets.GetCharacterName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Input Character Name" Height="125" Width="246" 
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        KeyDown="GetName_KeyDown"
        >
    <Grid>
        <TextBox BorderThickness="1" Name="Name_TextBox"
            Height="26" TextWrapping="Wrap" Text="{Binding Path=ProvidedName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
            VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="2,8,-2,57"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="70" Height="20" Click="OK_Button_Click">
        </Button>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="70" Height="20" Click="Cancel_Button_Click">

            </Button>
    </Grid>
</Window>
